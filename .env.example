# TrustCert AI - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================================================
# APPLICATION CONFIG
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
APP_NAME="TrustCert AI"
APP_VERSION=2.0.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# SECURITY (CHANGE THESE!)
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme-generate-secure-key
JWT_SECRET_KEY=changeme-generate-secure-key
ADMIN_API_KEY=changeme-generate-secure-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://trustcert:password@localhost:5432/trustcert
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# ============================================================================
# BLOCKCHAIN
# ============================================================================
# Ethereum
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETH_CHAIN_ID=1  # 1=mainnet, 5=goerli, 11155111=sepolia
ETH_PRIVATE_KEY=your-private-key-here

# Smart Contracts
REGISTRY_CONTRACT_ADDRESS=
NFT_CONTRACT_ADDRESS=

# IPFS (Pinata)
IPFS_API_URL=https://api.pinata.cloud
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
IPFS_API_KEY=your-pinata-api-key
IPFS_SECRET_KEY=your-pinata-secret-key

# ============================================================================
# CRYPTOGRAPHY
# ============================================================================
RSA_PRIVATE_KEY_PATH=./keys/rsa_private.pem
RSA_PUBLIC_KEY_PATH=./keys/rsa_public.pem
ECDSA_PRIVATE_KEY_PATH=./keys/ecdsa_private.pem
ECDSA_PUBLIC_KEY_PATH=./keys/ecdsa_public.pem

# ============================================================================
# ML/AI
# ============================================================================
ML_MODELS_PATH=./models
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# ============================================================================
# CELERY
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# MONITORING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_METRICS=true
SENTRY_DSN=

# Grafana
GRAFANA_PASSWORD=admin

# ============================================================================
# EMAIL (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@trustcert.ai

# ============================================================================
# STORAGE (Optional)
# ============================================================================
S3_BUCKET=trustcert-storage
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ZKP_ENABLED=true
FEATURE_QUANTUM_RESISTANT=true
FEATURE_BLOCKCHAIN_ENABLED=true
FEATURE_ML_VALIDATION=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# TRUST SCORE
# ============================================================================
TRUST_SCORE_THRESHOLD_CERTIFIED=80.0